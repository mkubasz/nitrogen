@model IEnumerable<Repozytorium.Models.BlogModel>

@{
    ViewBag.Title = "Index";
    Styles.Render("~/Content/css");
}
<div class="service text-center">
    <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2">

        </div>
        <div class="col-xs-8 col-sm-8 col-md-8">
            <h1>Aktualności w budowie </h1>
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2">

        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="container">
            <div class="row">

                <div class="col-xs-4 col-sm-4 col-md-4"> @Html.DisplayFor(modelItem => item.AddDate)</div>

                <div class="col-xs-8 col-sm-8 col-md-8"> @Html.DisplayFor(modelItem => item.Name)</div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">@Html.DisplayFor(modelItem => item.Post)</div>
                </div>
            </div>
        </div>

    }
</div>


