@using System.Web.UI.WebControls
@model TeamOfCode.Models.EmailFormModel

<!-- Contact section start -->
<div id="contact" class="contact">
    <div class="section secondary-section">
        <div class="container">
            <div class="title">
                <h1>Kontakt</h1>
                <p>Jeżeli masz dla nas wyzwanie nie bój się do nas napisać!</p>
            </div>
        </div>
        <div class="map-wrapper">
            <div class="map-canvas" id="map-canvas">Wczytywanie mapy...</div>
            <div class="container">
                <div class="row-fluid">
                    <div class="span5 contact-form centered">
                        <h3>Napisz do nas</h3>
                        <div id="successSend" class="alert alert-success invisible">
                            <strong>Zrobione!</strong>Twoja wiadomość została wysłana.
                        </div>
                        <div id="errorSend" class="alert alert-error invisible">Nie udało się wysłać wiadomości.</div>
                        @*<form id="contact-form" action="php/mail.php">*@
                        @using (Html.BeginForm("Kontakt","Home"))
                        {
                        <div class="control-group">
                            <div class="controls">
                                @*<input class="span12" type="text" id="name" name="name" placeholder="* Twoja nazwa..." />*@
                               
                                @Html.EditorFor(model => model.FromName, new { htmlAttributes = new { @class = "span12", PlaceHolder = "Nazwa..." } })
                                @Html.ValidationMessageFor(model => model.FromName, "", new { @class = "text-danger" })
                                @*<div class="error left-align" id="err-name">Wpisz swoją nazwe.</div>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                @*<input class="span12" type="email" name="email" id="email" placeholder="* Twój email..." />
                                    <div class="error left-align" id="err-email">Wpisz poprawny email adress.</div>*@
                               
                                @Html.EditorFor(model => model.FromEmail, new { htmlAttributes = new { @class = "span12", PlaceHolder = "Email..." } })
                                @Html.ValidationMessageFor(model => model.FromEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                @*<textarea class="span12" name="comment" id="comment" placeholder="* Wiadomość..."></textarea>
                                    <div class="error left-align" id="err-comment">Please swoja wiadomość.</div>*@
                               
                                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "span12" , PlaceHolder="Wiadomość..." } })
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                @*<button id="send-mail" class="message-btn">Wyślij wiadomość</button>*@
                                <input type="submit" value="Wyślij wiadomość" class="message-btn" />
                            </div>
                        </div>
                        @*                        </form>*@
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="span9 center contact-info">
                <p>Poland</p>
                <p class="info-mail">marcin.mazurowski@o2.pl</p>

                <div class="title">
                    <h3>Znajdź nas w sieci</h3>
                </div>
            </div>
            <div class="row-fluid centered">
                <ul class="social">
                    <li>
                        <a href="https://www.facebook.com/marcin.martin.35">
                            <span class="icon-facebook-circled"></span>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/pub/marcin-mazurowski/88/31b/817">
                            <span class="icon-linkedin-circled"></span>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com/patryk.stulczewski">
                            <span class="icon-facebook-circled"></span>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</div>
